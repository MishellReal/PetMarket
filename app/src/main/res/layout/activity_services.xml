<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services">

    <TextView
        android:id="@+id/textViewServicios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="Servicios"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="48sp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTake"
        android:layout_width="176dp"
        android:layout_height="160dp"
        android:layout_marginTop="72dp"
        android:background="@mipmap/take"
        android:hint="@string/ButtonTake"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonBathe"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewServicios" />

    <Button
        android:id="@+id/buttonBathe"
        android:layout_width="176dp"
        android:layout_height="160dp"
        android:layout_marginTop="72dp"
        android:background="@mipmap/bathe1"
        android:hint="@string/ButtonBathe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonTake"
        app:layout_constraintTop_toBottomOf="@+id/textViewServicios" />

    <Button
        android:id="@+id/buttonLoading"
        android:layout_width="162dp"
        android:layout_height="173dp"
        android:layout_marginTop="84dp"
        android:background="@mipmap/loading"
        android:hint="@string/ButtonLoading"
        app:layout_constraintEnd_toStartOf="@+id/buttonPedicure"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTake" />

    <Button
        android:id="@+id/buttonPedicure"
        android:layout_width="159dp"
        android:layout_height="170dp"
        android:layout_marginTop="84dp"
        android:background="@mipmap/pedicure"
        android:hint="@string/ButtonPedicure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonLoading"
        app:layout_constraintTop_toBottomOf="@+id/buttonBathe" />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="61dp"
        android:layout_height="45dp"
        android:background="@mipmap/profile"
        android:hint="@string/ButtonProfile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoading"
        app:layout_constraintVertical_bias="0.73" />

    <TextView
        android:id="@+id/textViewPasep"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="16dp"
        android:text="Paseos"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonTake"
        app:layout_constraintEnd_toEndOf="@+id/buttonTake"
        app:layout_constraintStart_toStartOf="@+id/buttonTake" />

    <TextView
        android:id="@+id/textViewBaño"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Baños"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonBathe"
        app:layout_constraintEnd_toEndOf="@+id/buttonBathe"
        app:layout_constraintStart_toStartOf="@+id/buttonBathe" />

    <TextView
        android:id="@+id/textViewHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Hospedaje"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonLoading"
        app:layout_constraintEnd_toEndOf="@+id/buttonLoading"
        app:layout_constraintStart_toStartOf="@+id/buttonLoading" />

    <TextView
        android:id="@+id/textViewSalon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Peluquería"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonPedicure"
        app:layout_constraintEnd_toEndOf="@+id/buttonPedicure"
        app:layout_constraintStart_toStartOf="@+id/buttonPedicure" />

    <TextView
        android:id="@+id/textViewPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil de Mascota"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonProfile"
        app:layout_constraintStart_toStartOf="@+id/buttonProfile"
        tools:layout_editor_absoluteY="611dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="49dp"
        android:layout_height="61dp"
        app:srcCompat="@drawable/historialServicios"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="654dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicios Contratados"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewPerfil"
        app:layout_constraintTop_toTopOf="@+id/textViewPerfil" />

</androidx.constraintlayout.widget.ConstraintLayout>